<h1>Eat Da Burger</h1>

<h2>------------------</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Create a burger:</h2>
<form class="create-form">

  <div class="form-group">
    <label for="brg">Burger Name:</label>
    <input type="text" id="brg" name="name">
  </div>

  <div class="form-group">
    <label for="dev">Devoured</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> Not Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>
